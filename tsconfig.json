{
  "compilerOptions": {
    "moduleResolution": "node16",
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "importHelpers": true,
    "esModuleInterop": true,
    // make sure to reset types per default,
    // otherwise we have @types/node which is equivalent to lib: [es2018] which is not what we want as default
    "types": []
  },
  "exclude": [
    "**/*.spec.ts",
    "packages/**/test/**/*.ts"
  ]
}
