{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "npmClient": "npm",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "*",
      "message": "build(release): next version [skip_build]"
    },
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  }
}
