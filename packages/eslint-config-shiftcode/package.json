{
  "name": "eslint-config-shiftcode",
  "version": "1.0.0",
  "description": "default shiftcode config for eslint",
  "repository": "https://github.com/shiftcode/sc-commons-public",
  "license": "UNLICENSED",
  "author": "shiftcode GmbH <team@shiftcode.ch>",
  "sideEffects": false,
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ng-config": {
      "types": "./dist/ng-config/index.d.ts",
      "default": "./dist/ng-config/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "lint": "yarn lint:src:fix",
    "lint:ci": "yarn lint:src",
    "lint:src": "eslint ./src",
    "lint:src:fix": "eslint ./src --cache --fix",
    "lint:staged": "yarn lint",
    "prettier": "prettier --write --config ../../.prettierrc.yml '{src,e2e,test}/**/*.ts'",
    "prettier:staged": "prettier --write --config ../../.prettierrc.yml",
    "prepublish": "prepare-dist",
    "test": "echo 'Error: no test specificed'",
    "test:ci": "yarn test"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-shiftcode": "^1.0.0",
    "eslint-plugin-unused-imports": "^3.0.0"
  },
  "peerDependencies": {
    "@angular-eslint/builder": "^15.0.0",
    "@angular-eslint/eslint-plugin": "^15.0.0",
    "@angular-eslint/eslint-plugin-template": "^15.0.0",
    "@angular-eslint/schematics": "^15.0.0",
    "@angular-eslint/template-parser": "^15.0.0"
  },
  "peerDependenciesMeta": {
    "@angular-eslint/builder": {
      "optional": true
    },
    "@angular-eslint/eslint-plugin": {
      "optional": true
    },
    "@angular-eslint/eslint-plugin-template": {
      "optional": true
    },
    "@angular-eslint/schematics": {
      "optional": true
    },
    "@angular-eslint/template-parser": {
      "optional": true
    }
  },
  "publishConfig": {
    "directory": "dist"
  }
}
